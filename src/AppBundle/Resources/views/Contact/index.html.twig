                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="http://maps.googleapis.com/maps/api/js"></script>
    <script>
        function initialize() {
            var styles = [
                {
                    "stylers": [
                        { "hue": "#00ccff" },
                        { "saturation": 51 },
                        { "lightness": -15 },
                        { "gamma": 0.97 }
                    ]
                },{
                    "featureType": "landscape",
                    "stylers": [
                        { "saturation": -59 }
                    ]
                },{
                    "featureType": "road.arterial",
                    "stylers": [
                        { "hue": "#00bbff" },
                        { "saturation": 48 },
                        { "lightness": -18 }
                    ]
                },{
                    "featureType": "road.highway",
                    "stylers": [
                        { "lightness": -35 }
                    ]
                },{
                }
            ];
            var mapProp = {
                center:new google.maps.LatLng(51.134526,4.386233),
                zoom: 16,
                mapTypeId:google.maps.MapTypeId.ROADMAP,
                styles: styles
            };
            var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);

            var marker = new google.maps.Marker({
                position: {lat : 51.134526, lng:4.386233},
                map: map,
                title: 'Jarys DP'
            });
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <div class="content-mid no-padding">
        <div id="googleMap" class="map"></div>
    </div>


{% endblock %}
