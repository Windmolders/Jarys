{% for item in tree %}
    <li class="nav-item">
        <a class="nav-link" href="{{ item._link }}">
            {{ item.title }}
        </a>
        {% if item.__children %}
            <div class="dropdown-menu">
                {% for child in item.__children %}
                    <a class="dropdown-item" href="{{ child._link }}">{{ child.title }}</a>
                {% endfor %}
            </div>
        {% endif %}
    </li>
{% endfor %}