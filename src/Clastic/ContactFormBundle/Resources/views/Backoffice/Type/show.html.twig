{% extends 'ClasticBackofficeBundle::base.html.twig' %}

{% block html_title %}Jarys - {{ page_title|default(module.name) }}{% endblock %}

{% block header_actions %}
{% endblock %}

{% block page_title -%}
    {{ displayTitle }}
{%- endblock %}


{% block content %}
    <div class="row">
        <div class="col-md-12">
            <section class="node-form">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                <header class="header"></header>

                <div role="tabpanel" class="tabpanel">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#">Data {{ entity.id }}</a></li>
                    </ul>
                    <div class="tab-content">
                        <div  class="tab-pane active">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <tbody>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ entity.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ entity.description }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                                <div>
                                    <a class="btn btn-info btn-sm" title="Show" href="{{ path(links.list, { 'id': entity.id}) }}"><i class="fa fa-list"></i></a>
                                    <a class="btn btn-success btn-sm" title="Edit" href="{{ path(links.edit, { 'id': entity.id}) }}"><i class="fa fa-pencil"></i></a>
                                    <a class="btn btn-danger btn-sm" title="Delete" href="{{ path(links.delete, { 'id': entity.id}) }}"><i class="fa fa-trash"></i></a>
                                </div>

                            </div></div></div></div>
            </section>
        </div>
    </div>
{% endblock %}
