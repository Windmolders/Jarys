<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="clastic.contact.module.class">Jwi\ContactBundle\Module\ContactModule</parameter>
        <parameter key="clastic.contact.twig_extension.contact.class">Jwi\ContactBundle\Twig\ContactExtension</parameter>

    </parameters>

    <services>

        <service id="clastic.contact.module" class="%clastic.contact.module.class%">
            <tag name="clastic.module" node_module="false" alias="contact" />
        </service>

        <service id="clastic.contact.twig_extension.contact" class="%clastic.contact.twig_extension.contact.class%" public="false">
            <tag name="twig.extension" />
        </service>

    </services>
</container>
